@{
}
@model Order

<h2>Shipment</h2>
<p>Please give your information, then ordered procuts will be send.</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
    <h3>Purchaser</h3>
    <div class="form-group">
        <label>Name and surname:</label><input asp-for="Name" class="form-control" />
    </div>
    <h3>Address</h3>
    <div class="form-group">
        <label>Row 1:</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Row 2:</label><input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Row 3:</label><input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>City:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>State:</label><input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>Zip:</label><input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Country:</label><input asp-for="Country" class="form-control" />
    </div>

    <h3>Options</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWrap" /> Packed as present
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Make an order" />
    </div>
</form>